@model TiendaVirtualMVC.Models.Producto

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalles</h2>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nombre del Producto
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>

        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            Precio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            Imagen
        </dt>

        <dd>
            <img src="@Url.Content(Model.Imagen)" alt="Producto" width="250" />
        </dd>


        <dt>
            Proveedor
        </dt>

        <dd>
            @TiendaVirtualMVC.Controllers.ProductoController.NombreProveedor(Model.codigo_proveedor)
        </dd>

        <dt>
            Stock
        </dt>

        <dd>
            @Html.DisplayFor(model => model.stock)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Editar", new { id = Model.ProductoID }) |
    @Html.ActionLink("Regresar", "Index")
</p>

@section Scripts {
    <script>
        let value = @Model.stock
        console.log(value)
        if (value < 1) {
            alert("Sin Stock")
        }
    </script>
}