@model IEnumerable<TiendaVirtualMVC.Models.Pedido>

@{
    ViewBag.Title = "Pedidos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pedidos</h2>

@{
    if (User.IsInRole("Cliente"))
    {
        <p>
            @Html.ActionLink("Crear Nuevo", "Agregar")
        </p>
        <table class="table">
            <tr>
                <th>
                    Codigo Pedido
                </th>
                <th>
                    Razon Social
                </th>
                <th>
                    Fecha Pedido
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PedidoID)
                </td>
                <td>
                    @TiendaVirtualMVC.Controllers.PedidoController.NombreCliente(item.ClienteID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaPedido)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Editar", new { id = item.PedidoID }) |
                    @Html.ActionLink("Detalles", "Detalles", new { id = item.PedidoID }) |
                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.PedidoID }, new { @class = "aEliminar" })
                </td>
            </tr>
            }

        </table>
    }
    else
    {
        <div class="card text-center">
            <div class="card-header">
                Información
            </div>
            <div class="card-body">
                <h5 class="card-title text-danger">No tinenes Permisos para acceder</h5>
                <p class="card-text">Contacte con Soporte TI o el Administrador</p>
            </div>
            <div class="card-footer text-muted">
                Tienda Virtual MVC
            </div>
        </div>
    }
}


@section scripts
{
    <script>
        $(".aEliminar").click(function (event) {
            if (!confirm('Estas seguro de eliminar?')) {
                event.preventDefault();
            }
        });
    </script>
}